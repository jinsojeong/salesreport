<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
>

    <!--여기는 선택한 sales에 대한 detail 정보 출력 
    SimpleForm 이용 -->
    <Panel 
        id="idPannel"
        headerText="상세 판매내역"
        class="sapUiRespionsiceMargin"
        width="auto">

        <content>
            <form:SimpleForm
                id="idForm"
                layout="ResponsiveGridLayout"
            >
                <!-- 판매번호 -->
                <Label text="판매번호" />
                <Input
                    value="{sales>order_id}"
                    editable="false"
                />

                <!-- 판매제품 -->
                <Label text="판매제품" />
                <Input
                    value="{sales>product_name}"
                    editable="false"
                />
            </form:SimpleForm>
        </content>
        
    </Panel>



</mvc:View>